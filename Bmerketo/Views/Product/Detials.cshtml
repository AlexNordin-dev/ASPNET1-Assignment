@model Bmerketo.Models.ViewModels.NewProductVM

@{
    ViewData["Title"] = "Update ";
    Layout = "~/Views/Shared/_LayoutCenterScreen.cshtml";
}
<div class="d-flex justify-content-center">
    <div class="col-md-8">
        <p> <h1>Ditials</h1></p>

        <div class="Row">
            <div class="col-md-8">
                <div class="form-group">
                    <div class="col-md-8">
                        <img src="@("~/image/product/"+ Model.ImageName)" asp-append-version="true" width="100%" alt="@Model.ImageAlt">
                    </div>
                </div>
                @if (User.IsInRole("Administrator"))
                {
                    <div class="form-group">
                        <label asp-for="ImageAlt" class="control-label"></label>
                        <input asp-for="ImageAlt" class="form-control" readonly />
                        <label asp-for="ImageName" class="control-label"></label>
                        <input asp-for="ImageName" class="form-control" readonly /> <br />
                    </div>
                }

                <div class="form-group">
                    <label asp-for="ProductName" class="control-label"></label>
                    <input asp-for="ProductName" class="form-control" readonly />

                </div>
                <div class="form-group">
                    <label asp-for="ProductPrice" class="control-label"></label>
                    <input asp-for="ProductPrice" class="form-control" readonly />
                    <br />
                </div>
                <div class="form-group">
                    <label asp-for="SKU" class="control-label"></label>
                    <input asp-for="SKU" class="form-control" readonly />
                    <br />
                </div>
                <div class="form-group">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" class="form-control" readonly />
                    <br />
                </div>
                <div class="form-group">
                    <label asp-for="ShortDescription" class="control-label"></label>
                    <input asp-for="ShortDescription" class="form-control" readonly />
                    <br />
                </div>
                <div class="form-group">
                    <label asp-for="LongDescription" class="control-label"></label>
                    <input asp-for="LongDescription" class="form-control" readonly />
                    <br />
                </div>
                <div class="form-group">
                    <label asp-for="BrandName" class="control-label"></label>
                    <select asp-for="BrandEntityId" class="form-control" asp-items="ViewBag.BrandEntityId" readonly disabled></select>
                    <br />
                </div>
                <div class="form-group">
                    <label asp-for="CategoryName" class="control-label"></label>
                    <select asp-for="CategoryEntityId" class="form-control" asp-items="ViewBag.CategoryEntityId" readonly disabled></select>
                    <br />
                </div>

                <div class="form-group">
                    <label asp-for="ColorName" class="control-label"></label>
                    <select asp-for="ColorEntityIds" class="form-control" asp-items="ViewBag.ColorEntityIds" readonly disabled></select>
                    <br />
                </div>
                @if (User.IsInRole("Administrator"))
                {
                    <div class="form-group">
                       
                        <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.Id"><i class="fa-solid fa-file-pen"></i> Edit </a>
                        <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@Model.Id"><i class="fa-solid fa-trash"></i> Delete </a>

                    </div>
                }

                <a class="btn btn-outline-secondary" asp-action="Index"><i class="fa-solid fa-backward"></i> Show All</a>



            </div>
        </div>
    </div>
</div>


