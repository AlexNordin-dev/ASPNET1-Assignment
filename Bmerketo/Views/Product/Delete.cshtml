@model Bmerketo.Models.Entities.ProductEntity

@{
    ViewData["Title"] = "Delete ";
    Layout = "~/Views/Shared/_LayoutCenterScreen.cshtml";
}
<div class="Row text d-flex justify-content-center">
    <div class="col-md-8" offset-2>
        <p> <h1>Delete</h1></p>
        <div class="Row">
            <div class="col-md-8" offset-2>

                <div asp.asp-validation-summary="ModelOnly" class="text-danger">
                </div>
                <div class="form-group">
                    <label asp-for="ProductName"></label>
                    <input asp-for="ProductName" class="form-control" readonly />

                </div>
                <div class="form-group">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <a class="btn btn-outline-secondary float-laft" asp-action="Index">Show All</a>
                        <button type="submit" value="Confirm" class="btn btn-danger float-right">Delete</button>
                       
                    </form>
                  

                </div>


            </div>
        </div>
    </div>
</div>