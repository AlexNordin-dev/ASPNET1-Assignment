@model SignUpForm
@{
    ViewData["Title"] = "Become a Member";
    Layout = "~/Views/Shared/_LayoutCenterScreen.cshtml";
}


<section class="registration-form">
    <div class="container">
        <div class="logotype">
            <a asp-controller="Home" asp-action="Index">@ViewData["SiteName"]</a>
        </div>

        <h1>@ViewData["Title"]</h1>
        <form method="post" asp-action="SignUp" enctype="multipart/form-data" asp-route-ReturnUrl="@Model.ReturnUrl" novalidate>
            <div class="row">
                <div class="registration-form-error-summary">
                    <div asp-validation-summary="ModelOnly" class="error"></div>
                </div>
                <div class="col-md-6">
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="error"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" type="text" class="form-control" />
                    <span asp-validation-for="LastName" class="error"></span>
                </div>
            </div>
            <div class="col-12">
                <label asp-for="StreetName"></label>
                <input asp-for="StreetName" type="text" class="form-control" />
                <span asp-validation-for="StreetName" class="error"></span>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="PostalCode"></label>
                    <input asp-for="PostalCode" type="text" class="form-control" />
                    <span asp-validation-for="PostalCode" class="error"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="City"></label>
                    <input asp-for="City" type="text" class="form-control"  />
                    <span asp-validation-for="City" class="error"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" type="text" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="error"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Company"></label>
                    <input asp-for="Company" type="text" class="form-control" />
                    <span asp-validation-for="Company" class="error"></span>
                </div>
            </div>
            <div class="col-md-12">
                <label asp-for="Email"></label>                  
                <input asp-for="Email" type="email" class="form-control"  />
                <span asp-validation-for="Email" class="error"></span>
            </div>
            <div class="col-md-12">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" class="form-control"  />
                <span asp-validation-for="Password" class="error"></span>
            </div>
            <div class="col-md-12">               
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="error"></span>
            </div>
            <div class="col mb-12">
                <label asp-for="ProfileImage"></label>
                <input asp-for="ProfileImage" accept="/*" type="file" class="form-control"  />
                <span asp-validation-for="ProfileImage" class="error"></span>
            </div>
           
            <button class="btn-theme mt-3" type="submit">Submit</button>
            <div class="registration-form-link">
                <span class="me-2">Already have an Account?</span>
                <a asp-action="SignIn">Login here</a>
            </div>
        </form>
    </div>
</section>
